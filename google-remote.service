[Unit]
Description=Google Remote
Before=systemd-logind.service

[Service]
ExecStart=/bin/openvt --console=2 --switch --force --wait -- /bin/bash -c \
            '/home/pi/projects/google-remote/run.sh 2> /home/pi/google-remote.log'
ExecStartPost=/usr/bin/deallocvt

# disable timeout logic during start of process
TimeoutSec=infinity

# restart when fails
Restart=on-failure

# wait 30 seconds before restarting
RestartSec=5

[Install]
WantedBy=multi-user.target